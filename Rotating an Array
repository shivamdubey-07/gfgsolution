
class Solution {
    void leftRotate(int[] arr, int n, int d) {
       

        
        int a[]=new int[n];
        
        for(int i=0;i<n;i++){
            if(i<d){
                a[n-d+i]=arr[i];
            }
            else{
                a[i-d]=arr[i];
            }
        }
        
        for(int i=0;i<n;i++){
            arr[i]=a[i];
        }
        
        
        
        
    }
}
